---
import { formatServiceDetails } from '../js/utils.js';

interface Props {
  title: string;
  image?: string;
  shortDescription?: string;
  details?: string;
}

const { title, image, shortDescription, details } = Astro.props;
const formattedDetails = formatServiceDetails(details);
const hasDetails = !!formattedDetails;
const message = `Хочу заказать: ${title}`;
const safeMessage = message.replace(/'/g, "\\'");
---

<div 
  class={`service-card bg-white rounded-lg shadow-md hover:shadow-lg transition overflow-hidden flex flex-col ${hasDetails ? 'is-clickable' : ''}`}
  onclick={hasDetails ? "toggleServiceAccordion(this)" : null}
  aria-expanded={hasDetails ? "false" : null}
>
  {image && (
    <div class="aspect-card overflow-hidden border-b border-gray-100 flex-shrink-0">
      <img 
        src={image} 
        alt={title} 
        class="w-full h-full object-cover object-center block hover:scale-105 transition-transform duration-500" 
        loading="lazy"
      />
    </div>
  )}
  
  <div class="bg-gray-100 p-4 border-b flex-shrink-0 flex justify-between items-center">
    <h3 class="text-lg font-bold text-gray-800">{title}</h3>
    {hasDetails && <i class="ri-arrow-down-s-line accordion-chevron text-xl text-gray-500"></i>}
  </div>
  
  <div class="p-6 flex flex-col flex-grow">

    <p class="service-short-desc text-gray-600 mb-4 flex-grow">{shortDescription}</p>

    {hasDetails && (
      <div class="service-details-container">
        <div class="service-details-content" set:html={formattedDetails}>
        </div>
      </div>
    )}

    <button 
      onclick={`event.stopPropagation(); openWhatsApp('${safeMessage}')`} 
      class="w-full bg-orange-500 text-white py-3 px-4 rounded-lg font-bold hover:bg-orange-600 transition mt-6 flex items-center justify-center"
    >
      <i class="ri-whatsapp-line mr-2 text-xl"></i>Заказать
    </button>
  </div>
</div>

---
import { formatServiceDetails } from '../js/utils.js';

interface Category {
  id: string;
  slug: string;
  title: string;
}

interface Props {
  title: string;
  image?: string;
  categoryId: string;
  useCases?: string;
  details?: string;
  benefits?: string[];
  specs?: string[];
  categories: Category[];
}

const { title, image, categoryId, useCases, details, benefits, specs, categories } = Astro.props;
const formattedDetails = formatServiceDetails(details);
const category = categories.find(c => c.id === categoryId);
const hasDetails = !!formattedDetails;
const hasSpecs = (benefits && benefits.length > 0) || (specs && specs.length > 0);
const isExpandable = hasDetails || hasSpecs;

const message = `Хочу забронировать: ${title}`;
const safeMessage = message.replace(/'/g, "\\'");

function getCategoryColor(slug: string) {
  const colors: Record<string, string> = {
    'standard': 'bg-green-100 text-green-800',
    'comfort': 'bg-blue-100 text-blue-800',
    'maxi': 'bg-yellow-100 text-yellow-800',
    'moto': 'bg-red-100 text-red-800',
    'car': 'bg-gray-100 text-gray-800'
  };
  return colors[slug] || 'bg-gray-100 text-gray-800';
}
---

<div 
  class={`service-card bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition flex flex-col ${isExpandable ? 'is-clickable' : ''}`}
  onclick={isExpandable ? "toggleServiceAccordion(this)" : null}
  aria-expanded={isExpandable ? "false" : null}
>
  {image && (
    <div class="aspect-card overflow-hidden relative group flex-shrink-0">
      <img 
        src={image} 
        alt={title} 
        class="w-full h-full object-cover object-center block group-hover:scale-105 transition-transform duration-500" 
        loading="lazy"
      />
      {category && (
        <span class={`absolute top-4 right-4 px-3 py-1 text-sm font-bold rounded-full shadow-md uppercase ${getCategoryColor(category.slug)}`}>
          {category.title}
        </span>
      )}
    </div>
  )}

  <div class="bg-gray-100 p-4 border-b flex-shrink-0 flex justify-between items-center">
    <h3 class="text-lg font-bold">{title}</h3>
    {isExpandable && <i class="ri-arrow-down-s-line accordion-chevron text-xl text-gray-500"></i>}
  </div>

  <div class="p-6 flex flex-col flex-grow">
    <p class="service-short-desc text-gray-600 mb-4 flex-grow">{useCases}</p>
    
    {isExpandable && (
      <div class="service-details-container">
        <div class="service-details-content">
          {hasDetails && <div set:html={formattedDetails}></div>}
          
          <div class="mt-4 pt-4 border-t border-gray-100">
            {benefits && benefits.length > 0 && (
              <>
                <h4 class="font-bold text-gray-800 mb-2">Преимущества:</h4>
                <ul class="list-disc list-inside text-gray-600 text-sm mb-4">
                  {benefits.map(b => <li>{b}</li>)}
                </ul>
              </>
            )}
            
            {specs && specs.length > 0 && (
              <>
                <h4 class="font-bold text-gray-800 mb-2">Характеристики:</h4>
                <ul class="list-disc list-inside text-gray-600 text-sm">
                  {specs.map(s => <li>{s}</li>)}
                </ul>
              </>
            )}
          </div>
        </div>
      </div>
    )}

    <button 
      onclick={`event.stopPropagation(); openWhatsApp('${safeMessage}')`} 
      class="w-full bg-orange-500 text-white py-3 px-4 rounded-lg font-bold hover:bg-orange-600 transition mt-6 flex items-center justify-center"
    >
      <i class="ri-motorbike-fill mr-2 text-xl"></i>Забронировать
    </button>
  </div>
</div>
